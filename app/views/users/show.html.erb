<% provide(:title, @user.name) %>

<div class="row">
    <aside class="span4">
 	    <section>
 		    <h1>
                <%= gravatar_for @user, size: 200 %>
                <%= @user.name %>
            </h1>
        </section>
        <section>
    	    <%= render 'shared/stats' %>
        </section> 
    </aside>
    <div class="span8">
	    <%= render 'follow_form' if signed_in %>
        <% if @user.posts.any? %> 
             <h3> Posts (<%= @user.posts.count %>)</h3>
        <% end %> 
        <ol class="posts">
	        <%= render @user.posts %>
        </ol>
        <%= will_paginate @posts %>
    </div>
</div>
