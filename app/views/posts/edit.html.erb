<% provide(:title, "Edit Post")%>

<div class="jumbotron">
      <div class="container">
        <div class="row">
          <div class="col-sm-5">
                <<h1>Edit Post</h1>
                
          </div>
          <div class="col-sm-7">
            <%= form_for @post do |f| %>
                 <%= render 'shared/error_messages', object: @post %>
                
                <div class="form-group">
                  <%= f.label :title %>
                  <%= f.text_field :title, :class =>"form-control" %>
                </div>
                <div class="form-group">
                  <%= f.label :content %>
                  <%= f.text_field :content, :class =>"form-control" %>
                </div>
     
                
                <%= f.submit  "Post", :class => "btn btn-primary" %>
              <% end %>
             
          </div>
        </div>
      </div>
</div>

