<li>
	<span class="content"><%= post.content[0..50]%></span>
	<span class="timestamp">
		posted <%= time_ago_in_words(post.created_at) %> ago.
	</span>
	<% if current_user?(post.user) %>
	 <%= link_to "delete", post, method: :delete, confirm: "You sure?", title: post.content %>
	 <%= link_to "details",post,  title: post.content %>
	 <%= link_to "edit", edit_post_path(post) , title: post.content %>
	 <%end%>
</li>